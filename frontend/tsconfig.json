{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",  // Set the base URL for relative module resolution
    "paths": {
      "@/*": ["src/*"]  // Define the alias for the 'src' folder
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
, "src/app/candidate/CVgenerationcandidate/CVGeneration.tsx", "src/app/candidate/CVgenerationcandidate/components/forms/CertificationsForm.tsx"  ],
  "exclude": [
    "node_modules"
  ]
}
